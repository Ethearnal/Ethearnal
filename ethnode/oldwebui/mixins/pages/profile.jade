// Background image section, including a button with lock and unlock icons.
section.background-image(style="display: none")
    .button-prev: i.material-icons keyboard_arrow_left
    .button-next: i.material-icons keyboard_arrow_right
    .items
        .item: img(src="images/background-road-different.png", alt="Building")
        .item: img(src="images/background-buildings.png", alt="Building")
        .item: img(src="images/background-downtown.png", alt="Building")

// This section is for your whole profile, including left and right sides, profile information and etc.
section.documentation(style="display: none")

    .container

        // Profile information including profile image, current work, current city and state, skills and etc.
        .profile-information-container.col-lg-4.col-md-4.col-sm-12.col-xs-12

            .profile-information.up

                // Profile header, including profile image, current work, city, state and two buttons.
                .profile-upper

                    .profile-image.open-modal(open-modal="#edit-profile")
                        img(src="", alt="")
                        .text-on-image: p Change

                    h2
                    h5.profile-information-position
                    p.location

                    button.leave-msg Send Message

                    // SKILLS
                    p.skills-text Skills <i class="skills-down material-icons">keyboard_arrow_down</i>

                    .skills.hidden
                        //- p program management
                        //- p angular
                        //- p python

                    // LANGUAGES
                    p.skills-text Languages <i class="languages-down material-icons">keyboard_arrow_down</i>

                    .languages.hidden
                        //- p lithuanian
                        //- p bulgarian



            .profile-information.middle

                // Profile description including a description about you. (dark-gray section)
                .profile-description
                    p Profile's description.

            // Profile footer, including social media links.
            .profile-footer
                ul.list-inline
                    li: a(href=""): i.icon-facebook
                    li: a(href=""): i.icon-twitter
                    li: a(href=""): i.icon-r-s-s
                    li: a(href=""): i.icon-instagram
                    li: a(href=""): i.icon-google


        // Profile documentation including jobs and education, stories, shout-outs and questions with answers
        .col-lg-8.col-md-8.col-sm-12.col-xs-12.profile-documentation-full

            .profile-documentation.col-xs-12

                ul.nav.nav-tabs(role="tablist")
                    li.active.timeline-li(role="presentation"): a(href="#gigs", aria-controls="gigs", role="tab", data-toggle="tab") Gigs
                    li.timeline-li(role="presentation"): a(href="#portfolio", aria-controls="portfolio", role="tab", data-toggle="tab") Portfolio
                    li.timeline-li(role="presentation"): a(href="#orders", aria-controls="orders", role="tab", data-toggle="tab") Orders

                .plusIcon.gigs.active.open-modal(open-modal="#add-gig"): i.material-icons library_add
                .plusIcon.portfolio.open-modal(open-modal="#add-portfolio"): i.material-icons note_add


                // All the information about above listed tabs.
                .tab-content.col-xs-12

                    // Gigs TAB
                    .tab-pane.fade.in.active#gigs.col-xs-12(role="tabpanel")
                        include ../tabs/gigs

                    // Portfolio TAB
                    .tab-pane.fade#portfolio.col-xs-12(role="tabpanel")
                        include ../tabs/portfolio

                    // Portfolio TAB
                    .tab-pane.fade#orders.col-xs-12(role="tabpanel")
                        include ../tabs/orders